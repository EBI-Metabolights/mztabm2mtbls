{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run converter",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/mztabm2mtbls/converter.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "--input-file=test/data/MTBLS263/mztabm/MTBLS263.mztab"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false
    },
    {
      "name": "Validate Local Study",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/commands/validate_study.py",
      "args": [
        "--mtbls_provisional_study_id=MTBLS263",
        "--target_metadata_files_path=output/MTBLS263",
        "--data_files_path=test/data/MTBLS263/FILES",
        "--mtbls_remote_validation=False",
        "--mztabm_file_path=test/data/MTBLS263/mztabm/MTBLS263.mztab",
        "--mztabm_mapping_file=test/data/configurations/mzTab_2_0-M_mapping.xml",
        "--mztabm_validation_level=Error",
        "--mtbls_validation_bundle_path=${workspaceFolder}/bundle.tar.gz",
        "--opa_executable_path=opa",
        "--temp_folder=output/temp",
        "--config_file=test/data/configurations/mztabm2mtbls_config.json"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false
    },
    {
      "name": "Run Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false
    }
  ]
}
